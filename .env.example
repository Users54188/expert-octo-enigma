# 数据库配置
DB_PATH=./data/quant.db

# DeepSeek API配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# 券商配置（实盘交易）
# 注意：这些是敏感信息，不要提交到版本控制
BROKER_USERNAME=your_broker_username
BROKER_PASSWORD=your_broker_password

# 告警 Webhook
FEISHU_WEBHOOK=https://open.feishu.cn/open-apis/bot/v2/hook/your_webhook
DINGDING_WEBHOOK=https://oapi.dingtalk.com/robot/send?access_token=your_token

# 日志级别
LOG_LEVEL=info

# 本地模式配置
MODE=local

# 数据源配置
DATA_SOURCE_PRIMARY=mock
DATA_SOURCE_FALLBACK=sina,eastmoney,tencent
MOCK_DATA_ENABLED=true

# 监控配置
WEBSOCKET_ENABLED=true
WEBSOCKET_MAX_CONNECTIONS=100

# 邮件告警配置（可选）
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_TO=alert@example.com

# 风险管理配置
MAX_DAILY_LOSS=0.1
STOP_LOSS_PERCENT=0.05
MAX_POSITIONS=3

# 回测配置
BACKTEST_ENABLED=true
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-01-01

# 开发模式配置
DEV_MODE=false
HOT_RELOAD=false
